@model List<TblSertifikalar>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <a href="/Sertifika/SertifikaEkle" class="btn btn-info">Yeni Sertifika Ekle</a>
                                <br />
                                <br />
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-success">
                                                @item.Tarih
                                            </span>
                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Kaynak
                                                </div>
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Sertifika/SertifikaGetir/@item.Id" class="btn btn-primary btn-sm"> <i class="fas fa-pencil-alt"></i> Düzenle</a>
                                                    <a href="/Sertifika/SertifikaSil/@item.Id" class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i> Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@model List<TblHakkinda>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hakkında Düzenleme</h2>
<br />
<form asp-action="Index" asp-controller="Hakkinda" method="post">
    @foreach (var item in Model)
    {
        <input type="hidden" name="Id" value="@item.Id" />
        <label>Ad</label>
        <input type="text" class="form-control" name="Ad" value="@item.Ad">
        <br />
        <label>Soyad</label>
        <input type="text" class="form-control" name="Soyad" value="@item.Soyad">
        <br />
        <label>Adres</label>
        <input type="text" class="form-control" name="Adres" value="@item.Adres">
        <br />
        <label>Telefon</label>
        <input type="text" class="form-control" name="Telefon" value="@item.Telefon">
        <br />
        <label>Mail</label>
        <input type="text" class="form-control" name="Mail" value="@item.Mail">
        <br />
        <label>Açıklama</label>
        <textarea class="form-control" rows="5" name="Aciklama"> @item.Aciklama </textarea>
        <br />
        <label>Görsel</label>
        <input type="text" class="form-control" name="Image" value="@item.Image">
        <br />
        <button href="/Hakkinda/Index/@item" type="submit" class="btn btn-primary">Güncelle</button>
        <br />
        <br />
    }
</form>

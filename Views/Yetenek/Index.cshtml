@model List<TblYetenekler>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string progressRenk = "";
    string badgeRenk = "";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                                <br />
                            </div>
                            <div class="card-body">
                                <a href="/Yetenek/YetenekEkle" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th style="width: 125px">Düzenle</th>
                                            <th style="width: 90px">Sil</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Oran >= 0 && item.Oran <= 49)
                                            {
                                                progressRenk = "progress-bar bg-danger"; badgeRenk = "badge bg-danger";
                                            }
                                            if (item.Oran >= 50 && item.Oran <= 69)
                                            {
                                                progressRenk = "progress-bar bg-warning"; badgeRenk = "badge bg-warning";
                                            }
                                            if (item.Oran >= 70 && item.Oran <= 84)
                                            {
                                                progressRenk = "progress-bar bg-primary"; badgeRenk = "badge bg-primary";
                                            }
                                            if (item.Oran >= 85 && item.Oran <= 100)
                                            {
                                                progressRenk = "progress-bar bg-success"; badgeRenk = "badge bg-success";
                                            }
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Yetenek</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@progressRenk" style="width: @(item.Oran)%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@badgeRenk">@item.Oran%</span></td>
                                                <td><a href="/Yetenek/YetenekGetir/@item.Id" class="btn btn-warning"> <i class="fas fa-pencil-alt"></i> Düzenle</a></td>
                                                <td><a href="/Yetenek/YetenekSil/@item.Id" class="btn btn-danger"> <i class="fas fa-trash"></i> Sil</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>

